{% extends 'base.html.twig' %}

{% block title %}ApsiMan
{% endblock %}

{% block body %}
	<div class="container mb-5">
		<h1 class="text-center my-5">Are you ready to face ApsiMan ?</h1>

		<p class="text-center text-primary" style="font-size: 2rem;">Try to beat ApsiMan in a game of RPS and win some points</p>

		{% if app.session.get('life') > 0 %}
			<div class="text-center my-4 text-primary" style="font-size: 1.5rem;">
				<p>Make your choice</p>
			</div>
			{% for label, messages in app.flashes(['success', 'danger', 'warning', 'info']) %}
				{% for message in messages %}
					<div class="alert alert-{{ label }} my-4 w-50 mx-auto">
						{% if message == 'dragon' %}
						<div class="d-flex flex-column">
						<p></p>
							<p class="text-center"><i class="fa-solid fa-skull-crossbones fa-flip" style="--fa-animation-duration: 2s;" ></i> ApsiMan played the famous Blue Eyes White Dragon !!! <i class="fa-solid fa-skull-crossbones fa-flip" style="--fa-animation-duration: 2s;" ></i></p>
							<img src="{{ asset('build/images/dragon.jpg') }}" alt="a" class="w-50  mx-auto">
						</div>	
						{% else %}
							{{ message }}
						{% endif %}

					</div>
				{% endfor %}
			{% endfor %}

			<div class="row mb-5">
				<a class="col btn btn-outline-primary mx-5" href="/pfc/rocks">
					<i class="fa-solid fa-meteor fa-2x"></i>
					Rocks
				</a>
				<a class="col btn btn-outline-primary mx-5" href="/pfc/paper">
					<i class="fa-solid fa-scroll fa-2x"></i>
					Paper
				</a>
				<a class="col btn btn-outline-primary mx-5" href="/pfc/scissor">
					<i class="fa-solid fa-scissors fa-2x"></i>
					Scissor
				</a>
			</div>
			<div class="row">
				<div class="col-6 ">
					<h2>You</h2><br>
					<div class="fa-3x">
						{% for i in 1..app.session.get('life') %}
							<i class="fa-solid fa-heart fa-beat"></i>
						{% endfor %}
					</div>
				</div>
				<div class="col-6 text-end">
					<h2>ApsiMan</h2><br>
					<i class="fa-solid fa-3x fa-robot fa-bounce"></i>
				</div>
			</div>
		</div>
	{% else %}
		<div class="alert alert-danger my-4 w-50 mx-auto">
			Out of lives!
		</div>
		{# <i class="fa-solid fa-heart fa-beat"></i>
									<i class="fa-solid fa-heart fa-beat"></i> #}
	{% endif %}

</div></div></div>{% endblock %}
