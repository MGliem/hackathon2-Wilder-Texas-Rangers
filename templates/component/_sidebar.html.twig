<div class="sidebar border-end border-primary border-3">
    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white mt-5 w-100">
        {% if app.user %}
            <h3 class="text-center text-secondary w-100 mt-5">
                {{ app.user.firstname }}
                {{ app.user.lastname }}
            </h3>
            <div class="d-flex justify-content-center mt-3">
                <img class="w-75" src="{{ asset('build/images/photo.jpg') }}" alt=""></div>
                <h3 class="text-center text-secondary w-100 mt-4">
                    {{ app.user.points }}
                </h3>
            {% endif %}
        </div>
        <a href="/logout" class="text-center text-secondary w-100 mt-4 text-decoration-none d-flex justify-content-center btn btn-danger">
            Logout                 
        </a>
    </div>
    