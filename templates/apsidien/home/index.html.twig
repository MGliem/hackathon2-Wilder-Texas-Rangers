{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }} | Apsidien
	- Home
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('apsidienStyle') }}
{% endblock %}

{% block body %}
    <section class="home-apsidien container-fluid py-5">
        <div class="title mx-auto w-fit mb-5">
            <p class="title-before">Welcome Apsidian</p>
            <h1 class="text-secondary title-size w-fit mt-0">Adopt a top project</h1>
        </div>
        <div class="row pt-5">
            {% for project in projects %}
                <div class="col-lg-4">
                    <div class="card col-lg-12 my-4">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div class="d-flex flex-column">
                                <div class="title mx-auto w-fit mb-5">
                                    <p class="title-before text-secondary fs-5">Team {{ project.team|u.truncate('10', '...') }}</p>
                                    <h2 class="card-title text-center text-primary fs-3 fw-bold title-size">{{ project.name|u.truncate(20, '...') }}</h2>
                                </div>
                                <div class="position-relative">
                                    <p class="card-text px-5">{{ project.content|u.truncate(250, '...') }}</p>
                                    <div class="square-card-text"></div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center gap-3">
                                <a href="#" class="btn btn-secondary w-50">See More</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}