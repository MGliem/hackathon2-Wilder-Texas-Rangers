{% extends 'base.swup.html.twig' %}

{% block title %}
	{{ parent() }}
	| Apsidien - Adopt a project
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('apsidienStyle') }}
	{{ encore_entry_link_tags('nav') }}
{% endblock %}

{% block body %}
	<section class="home-apsidien py-5 container">
		<div class="title mx-auto w-fit mb-5">
			<p class="title-before">Master Chief,</p>
			<h1 class="text-secondary title-size w-fit mt-0">Find your ❤️ Apsidian</h1>
		</div>
		{% if m is not null %}
		<div class="row">
				<div class="d-flex align-items-center ms-3 col-lg-6">
					<i class="fa-solid fa-robot fa-xl fa-bounce"></i>
					<div class="box2 sb11 ms-3">Click ❌ or ✅ to confirm a apsidian on your project!</div>
				</div>
			<div class="col-lg-6 pt-5 mx-auto">

				<div class="card col-lg-12 my-4 transition-right" id="swup">
					<div class="card-body d-flex flex-column justify-content-between">
						<div class="d-flex flex-column">
							<div class="title mx-auto w-fit mb-5">
								<p class="title-before text-secondary fs-5">Team
									{{ m.apsidian.agency|u.truncate('10', '...') }}</p>
								<h2 class="card-title text-center text-primary fs-3 fw-bold title-size">{{ m.apsidian.firstName }} {{ m.apsidian.lastName }}</h2>
							</div>
							<div class="position-relative">
								<p class="card-text px-5">Points: {{ m.apsidian.points }}
								<br>
								On project: {{ m.project.name }}
								<br>
								<div class="d-flex justify-content-center">
								{% for skill in m.apsidian.skills %}
									<span class="btn btn-outline-primary mx-2">{{ skill }}</span><br>
								{% endfor %}
								</div>
								</p>
								<div class="square-card-text"></div>
							</div>
						</div>
						<div class="d-flex justify-content-center gap-3">
							<a href="#" class="btn btn-secondary w-50">See More</a>
						</div>
					</div>
				</div>
				<div class="d-flex justify-content-center gap-5" id="swup2">
					<a onclick="document.getElementById('swup').classList.remove('transition-right');document.getElementById('swup').classList.add('transition-left');" href="{{ path('manager_adopt_reject', {'mat': m.id}) }}">
						<i class="rejected bi bi-x-square text-danger"></i>
					</a>
					<a onclick="document.getElementById('swup').classList.remove('transition-left');document.getElementById('swup').classList.add('transition-right');" href="{{ path('manager_adopt_add', {'mat': m.id}) }}">
						<i class="accepted bi bi-check-square text-success"></i>
					</a>
				</div>
			</div></div>
		{% else %}
			<h2 class="text-primary mt-5 pt-5 w-fit mx-auto">Unfortunately, we have no more matches to offer!</h2>
		{% endif %}
	</section>
{% endblock %}
